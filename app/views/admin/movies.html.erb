<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><a href=<%= movie.image_url %>>画像</a></td>
        <td>
          <% if movie.is_showing == true then %>
          上映中
          <% else %>
          上映予定
          <% end %>
        </td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>